{% extends 'layout.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container-fluid pagePassword">

        <h1 class="h1-Admin">Mot de passe oublié ?</h1>

        <p class="text-center">Demandez à réinitialiser votre mot de passe en renseignant votre email.</p>
        {{form_start(form)}}
        <div class="d-flex justify-content-center">
            <div>
                {{ form_row(form.email, { 'label' : 'Email:'}) }}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary mb-4" type="submit">Envoyer</button>
        </div>
        {{form_end(form)}}
    </div>
{% endblock %}
