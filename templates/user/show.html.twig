{% extends 'layout_admin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1 class="h1-Admin">Utilisateur {{ user.username }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Identifiant</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Rôles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Mot de passe</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}"><button class="btn btn-secondary">Retour à la liste</button></a>

    <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-secondary">Modifier</button></a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
