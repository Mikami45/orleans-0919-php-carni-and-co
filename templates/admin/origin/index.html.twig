{% extends 'admin/index.html.twig' %}

{% block title %}Liste des origines ingrédients{% endblock %}

{% block body %}
    <div class="flex-column text-center">
        <h1 class="h1-Admin">Liste des origines ingrédients</h1>

        <a href="{{ path('origin_new') }}">
            <button class="btn btn-secondary mb-3 center-button">
                <i class="fas fa-plus"></i> Ajouter une nouvelle origine
            </button>
        </a>
        <div class="row">
            <table class="table-admin">
                <thead class="header-table-admin">
                <tr>
                    <th>Origine d'un produit</th>
                    <th></th>
                </tr>
                </thead>
                <tbody class="body-table-admin">
                {% for origin in origins %}
                    <tr>
                        <td>{{ origin.name }}</td>
                        <td>
                            <a href="{{ path('origin_edit', {'id': origin.id}) }}">
                                <button class="btn btn-secondary"><i class="fas fa-pen"></i> Modifier</button>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <div>Pas d'origines enregistrés</div>
                {% endfor %}
            </table>
         </div>

    </div>
{% endblock %}
