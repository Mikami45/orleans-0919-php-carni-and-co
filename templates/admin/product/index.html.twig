{% extends 'admin/index.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container-admin-product">
        <div class="header-admin-product">
            <h1 class="h1-Admin">Tous les produits</h1>
            <div class="search-container">
                {{ form_start(form, {'method': 'GET'}) }}
                {{ form_widget(form) }}
                <button class="btn btn-secondary mb-3 ml-1">{{ button_label|default('Rechercher') }}</button>
                {{ form_end(form) }}
            </div>
            <a class="btn-add" href="{{ path('admin_product_new') }}">
                <button type="button" class="btn btn-secondary">Ajouter un Produit</button>
            </a>
        </div>
        <div class="card-admin-product">
            {% for product in products %}
                <div class="card card-product bg-light mb-3">
                    <div class="card-header">{{ product.reference }}</div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <a href="{{ path('admin_product_show', {'id': product.id}) }}">
                            <button type="button" class="btn btn-secondary">Plus d'infos</button>
                        </a>
                        <a href="{{ path('admin_product_edit', {'id': product.id}) }}">
                            <button type="button" class="btn btn-secondary">Modifier</button>
                        </a>
                    </div>
                </div>
            {% else %}
                <p>Pas de produits trouv√©s</p>
            {% endfor %}
        </div>
        {{ knp_pagination_render(products) }}
    </div>
{% endblock %}
