{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container-admin-product">
        <div class="header-admin-product">
            <h1 class="h1-Product-Admin">Tous les produits</h1>
            <a href="{{ path('product_new') }}">
                <button type="button" class="btn btn-secondary">Ajouter un Produit</button>
            </a>
        </div>
        <div class="card-admin-product">
            {% for product in products %}
                <div class="card card-product bg-light mb-3" style="max-width: 18rem;">
                    <div class="card-header">{{ product.reference }}</div>
                    <div class="card-body">
                        <h5 class="card-title">Light card title</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the
                            card's content.</p>
                        <a href="{{ path('product_show', {'id': product.id}) }}">
                            <button type="button" class="btn btn-secondary">Plus d'infos</button>
                        </a>
                        <a href="{{ path('product_edit', {'id': product.id}) }}">
                            <button type="button" class="btn btn-secondary">Modifier</button>
                        </a>
                    </div>
                </div>
            {% else %}
                <p>Pas de produits trouv√©s</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
